{
  "compilerOptions": {
    "target": "es6",
    "baseUrl": ".",
    "module": "es2015",
    "outDir": "build/dist",
    "sourceMap": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "lib": ["dom", "es2015", "es2016"],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "importHelpers": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "plugins": [{ "name": "typescript-styled-plugin" }],
    "pretty": true
  },
  "exclude": ["node_modules"]
}
